@{
}
@model IEnumerable<string>

@*buttons and button layout for each team and home*@

<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-teamName=""  class="btn btn-outline-secondary">Home</a>
    <br />
    @foreach (string t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-teamName="@t" class="btn @(ViewBag.SelectedTeam == t ? "btn-primary" : "btn-outline-secondary")">@t</a>
        <br />
    }
</div>