@{
    ViewData["Title"] = "Delete Bowler";
}

@model Bowler

<h2>Confirm Deletion:</h2>

<h3>Are you sure you want to delete this bowler?</h3>

<form method="post" asp-controller="Home" asp-action="DeleteBowler">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>
